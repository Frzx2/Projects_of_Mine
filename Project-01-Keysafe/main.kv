<Create_password>
    canvas.before:
        Color:
            rgba: 0.580, 0.953, 0.922, 0.4
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [15,]
    MDBoxLayout:
        orientation: 'vertical'
        padding: 50
        spacing: 30

        MDLabel:
            id: label01
            text: "Create Your Password"
            halign: "center"
            font_style: "H4"
            theme_text_color: "Custom"
            text_color: 0.0549, 0.9804, 0.9647, 0.8

        MDTextField:
            id: new_pass
            hint_text: "Enter New Password"
            password: True
            on_text_validate: root.create()
            mode: "rectangle"
            size_hint_x: 1

        MDRaisedButton:
            text: "Create Password"
            on_press: root.create()
            md_bg_color: 0.051, 1.0, 0.0, 0.8
            size_hint_x: 0.8
            height: "70dp"
            font_size: "20sp"
            pos_hint: {"center_x": 0.5}

