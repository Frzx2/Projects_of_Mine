
<Create_password>
    canvas.before:
        Color:
            rgba: 0.580,0.953,0.922,0.4
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        orientation: 'vertical'
        padding: 50
        spacing: 10
        Label:
            id: label01
            text: "Create Your Password"
            background_color: 0.0549, 0.9804, 0.9647, 0.8
            font_size: 100
        TextInput:
            id: new_pass
            password: False
            multiline: False
        Button:
            text: "Create Password"
            on_press: root.create()
            font_size: 50
            background_color: 0.051, 1.0, 0.0, 0.8
<Login>
    canvas.before:
        Color:
            rgba: 0.580,0.953,0.922,0.4
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        padding: 50
        spacing: 10
        orientation: 'vertical'
        Label:
            id: label02
            text: "Enter Your Password"
            font_size: 100
            color: 0.0549, 0.9804, 0.9647, 0.8
        TextInput:
            id: passb
            password: True
            multiline: False
        Button:
            text: "Login"
            font_size: 50
            on_press: root.login()
            background_color: 0.051, 1.0, 0.0, 0.8
<Manage_Password>:
    canvas.before:
        Color:
            rgba: 0.420, 0.918, 0.855, 1
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        orientation: 'vertical'
        padding: 50
        spacing: 20

        Button:
            text: "View Password"
            on_press: app.root.get_screen("view").on_enter()
            height: 50
            pos_hint: {'center_x': 0.5}
            background_color: 0, 0.863, 0.486, 1

        Button:
            text: "Add Password"
            on_press: app.root.get_screen("insert").add_password()
            height: 50
            pos_hint: {'center_x': 0.5}
            background_color: 0.024, 0.510, 0.580,1

        Button:
            text: "Leave"
            on_press: app.stop()
            height: 50
            pos_hint: {'center_x': 0.5}
            background_color: 1, 0, 0, 1
<Insert_password>
    canvas.before:
        Color:
            rgba: 0.580,0.953,0.922,0.4
        Rectangle:
            pos: self.pos
            size: self.size
    GridLayout:
        padding: 50
        spacing: 10
        cols: 1
        Label:
            id: label03
            text: "Add Your Password"
            font_size: 65
        TextInput:
            id: web_name
            hint_text: "Enter Website Name"
        TextInput:
            id: web_pass
            hint_text: "Enter Password"
        Button:
            text: "Save Password"
            font_size: 50
            on_press: root.save_password()
            background_color: 0.165, 0.949, 0.149, 0.9
        Button:
            text: "Back"
            font_size: 50
            on_press: root.back()
            background_color: 0, 0.133, 0.831, 0.87

<View_password>:
    canvas.before:
        Color:
            rgba: 0, 1, 0.918, 1
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        orientation: 'vertical'
        padding: 10
        spacing: 10

        BoxLayout:
            size_hint_y: None
            height: '40dp'
            spacing: 10

            TextInput:
                id: search_bar
                hint_text: "Search website..."
                multiline: False
                on_text: root.filter_passwords(self.text)

            Button:
                text: "Back"
                size_hint_x: None
                width: '80dp'
                on_release: root.manager.current = 'manage'
                background_color: 0, 0.188, 1, 1

        ScrollView:
            GridLayout:
                id: password_grid
                cols: 1
                spacing: 10
                size_hint_y: None
                height: self.minimum_height
